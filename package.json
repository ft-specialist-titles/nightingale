{
  "name": "nightingale",
  "version": "0.0.2",
  "description": "Chart making tool for journalists",
  "main": "_site/index.html",
  "scripts": {
    "test": "browserify test/**/*.test.js | testling",
    "watch-js": "./bin/build-js watchify .tmp",
    "build-js": "./bin/build-js browserify npm-dist && uglifyjs dist/bundle.js -c -o dist/bundle.js",
    "watch-css": "mkdir -p .tmp && sass --style expanded --load-path=bower_components --watch src/styles/index.scss:.tmp/bundle.css",
    "build-css": "mkdir -p dist && sass --style compressed --load-path=bower_components src/styles/index.scss dist/bundle.css",
    "watch-html": "mkdir -p .tmp && jade src --watch --pretty -p .tmp -o .tmp -O \"$(<package.json)\"",
    "watch": "./bin/watch .tmp",
    "tmp-vendor": "./bin/build-vendor .tmp",
    "build": "rm -rf npm-dist && npm run build-css && ./bin/build-vendor npm-dist && npm run build-js && ./bin/build-html npm-dist",
    "start": "npm run build && srvlr dist -R -l tiny"
  },
  "repository": {
    "type": "git",
    "url": "http://git.svc.ft.com/scm/igct/nightingale.git"
  },
  "author": "luke.kavanagh@ft.com",
  "license": "MIT",
  "devDependencies": {
    "brfs": "^1.4.0",
    "browserify-shim": "^3.8.3",
    "debowerify": "^1.2.0",
    "handlebars": "^3.0.0",
    "hbsfy": "^2.2.1",
    "istanbulify": "git://github.com/peter-mouland/istanbulify"
  },
  "browserify": {
    "transform": [
      "debowerify",
      "browserify-shim",
      "hbsfy",
      "brfs"
    ]
  },
  "browser": {
    "jquery": "./bower_components/jquery/dist/jquery.js",
    "underscore": "./bower_components/underscore/underscore.js",
    "backbone": "./bower_components/backbone/backbone.js",
    "d3": "./bower_components/d3/d3.js",
    "bootstrap-sass": "./bower_components/bootstrap-sass/assets/javascripts/bootstrap.js"
  },
  "browserify-shim": {
    "jquery": "global:jQuery"
  }
}
