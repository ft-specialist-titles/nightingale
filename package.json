{
  "name": "nightingale",
  "version": "0.0.0",
  "description": "Chart making tool for journalists",
  "main": "src/index.js",
  "scripts": {
    "test": "browserify test/**/*.test.js | testling",
    "watch-js": "./bin/build-js watchify .tmp",
    "build-js": "./bin/build-js browserify dist && uglifyjs dist/bundle.js -c -o dist/bundle.js",
    "watch-css": "mkdir -p .tmp && sass --style expanded --load-path=bower_components --watch src/scss/index.scss:.tmp/bundle.css",
    "build-css": "mkdir -p dist && sass --style compressed --load-path=bower_components src/scss/index.scss dist/bundle.css",
    "watch-html": "mkdir -p .tmp && jade src --watch --pretty -p .tmp -o .tmp -O \"$(<package.json)\"",
    "watch": "./bin/watch .tmp",
    "tmp-vendor": "./bin/build-vendor .tmp",
    "build": "rm -rf dist && npm run build-css && ./bin/build-vendor dist && npm run build-js && ./bin/build-html dist",
    "start": "npm run build && srvlr dist -R -l tiny"
  },
  "repository": {
    "type": "git",
    "url": "http://git.svc.ft.com:8080/scm/igct/nightingale.git"
  },
  "author": "luke.kavanagh@ft.com",
  "license": "MIT",
  "dependencies": {
    "browserify": "~4.1.5",
    "uglifyjs": "~2.3.6",
    "jade": "~1.3.1",
    "debowerify": "~0.7.1",
    "html-minifier": "~0.6.1",
    "handlebars": "~1.3.0",
    "hbsfy": "~1.3.2",
    "exorcist": "~0.1.6",
    "brfs": "~1.2.0",
    "browserify-shim": "~3.7.0"
  },
  "devDependencies": {
    "tape": "~2.13.1",
    "watchify": "~0.10.1",
    "testling": "~1.6.1"
  },
  "browserify": {
    "transform": [
      "debowerify",
      "browserify-shim",
      "hbsfy",
      "brfs"
    ]
  },
  "browser": {
    "jquery": "./bower_components/jquery/dist/jquery.js",
    "underscore": "./bower_components/underscore/underscore.js",
    "backbone": "./bower_components/backbone/backbone.js",
    "d3": "./bower_components/d3/d3.js",
    "bootstrap-sass-official": "./bower_components/bootstrap-sass-official/assets/javascripts/bootstrap.js"
  },
  "browserify-shim": {
    "jquery": "global:jQuery"
  }
}
