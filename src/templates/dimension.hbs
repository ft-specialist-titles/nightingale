<div class="dimension-panel panel panel-default">
  {{#if warningMessage}}
    <div class="panel-heading"><span class="dimension-name">{{name}}</span>
      <span class="pull-right alert alert-warning">{{warningMessage}}</span>
    </div>
  {{else}}
    <div class="panel-heading"><span class="dimension-name">{{name}}</span></div>
  {{/if}}
  <div class="panel-body">
    <form role="form">
      <div class="form-group">
        <label>Label</label>
        <input name="label" class="form-control" />
      </div>
      <div class="form-group">
        <label>Data type</label>
        <div data-region="datatype"></div>
      </div>
      <div class="dimension-panel-section form-group" data-section-name="series">
        <label>Series</label>
        <div data-region="series"></div>
      </div>
      <div class="dimension-panel-section form-group" data-section-name="label-format">
        <label>Format</label>
        <div class="row">
          <div class="col-xs-3">
            <input type="text" class="form-control" placeholder="prefix">
          </div>
          <div class="col-xs-3">
            <input type="text" class="form-control" placeholder="suffix">
          </div>
        </div>
      </div>
      <div class="dimension-panel-section form-group" data-section-name="highlight">
        <label>Highlight</label>
        <div data-region="highlight"></div>
      </div>
      <div class="dimension-panel-section form-group" data-section-name="forecast">
        <label>Forecast</label>
        <select class="form-control">
          <option>Pick a date</option>
        </select>
        <span class="help-block">When does the forecast begin?</span>
      </div>
    </form>
  </div>
</div>
